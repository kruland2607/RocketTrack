<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rocket Altitude" />

    <TextView
        android:id="@+id/rocket_alt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rocket Lon" />

    <TextView
        android:id="@+id/rocket_lon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rocket Lat" />

    <TextView
        android:id="@+id/rocket_lat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Current Alt" />

    <TextView
        android:id="@+id/my_alt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Current Lon" />

    <TextView
        android:id="@+id/my_lon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Current Lat" />

    <TextView
        android:id="@+id/my_lat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bearing" />

    <TextView
        android:id="@+id/bearing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Azimuth" />

    <TextView
        android:id="@+id/azimuth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Distance" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DeclTo" />

    <TextView
        android:id="@+id/declto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Declination" />

    <TextView
        android:id="@+id/declination"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

</LinearLayout>